<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="top|center_horizontal">

        <!-- KEY -->
        <TextView
            android:id="@+id/txtKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key: -"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />

        <!-- BPM -->
        <TextView
            android:id="@+id/txtBpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BPM: -"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />

        <!-- PROGESSIONE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progressione Piano:"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="5dp" />

        <Spinner
            android:id="@+id/spinnerProgression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:spinnerMode="dropdown" />

        <!-- BATTERIA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stile Batteria:"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="5dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <RadioGroup
                android:id="@+id/radioDrums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Opzione NESSUNA -->
                <RadioButton
                    android:id="@+id/radioNone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nessuna"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/radioPop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pop"
                    android:textColor="#000000"
                    android:checked="true"
                    android:layout_marginStart="10dp" />

                <RadioButton
                    android:id="@+id/radioRock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rock"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp" />

                <RadioButton
                    android:id="@+id/radioReggae"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reggae"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp" />
            </RadioGroup>
        </HorizontalScrollView>

        <!-- PULSANTI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PLAY"
                android:padding="10dp"
                android:textSize="18sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="STOP"
                android:padding="10dp"
                android:textSize="18sp"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="15dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
